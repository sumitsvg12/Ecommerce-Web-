<body>
    <div class="container-fluid position-relative d-flex p-0">
            <!-- Form Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">verify email</h6>
                            <form method="post"  action="/login/verifyemail">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control form-control-lg" placeholder="email" name="email"    required="">
                                  <div class="input-group-text"><span class="bi bi-envelope" ></span></div>
                                </div>
                                <button type="submit" class="btn btn-primary">verify email</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Form End -->
            <script> <% if( locals.flash.success &&  locals.flash.success.length >0){ %>
                new Noty({
                type: 'success',
                layout: 'topCenter',
                theme: 'light',
                text: "<%= locals.flash.success %>",
                timeout:1000,
              }).show();
              <% } %>
              </script>